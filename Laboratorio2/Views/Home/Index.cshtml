@{
    ViewData["Title"] = "Home Page";
}

@Html  <script src="https://kit.fontawesome.com/8da59f9c4f.js" crossorigin="anonymous"></script>
@Html  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<h1>
    <i class="fa fa-list-ul"></i>
    Listado de personasa
</h1>

<div class="animate__animated animate__fadeInDown">
    <table id="Tabla" class="table table-striped table-hover">
        <thead>
            <tr>

                <th>
                    <i class="fa fa-list"></i>
                    Id Persona
                </th>
                <th>
                    <i class="fa fa-user-circle"></i>
                    Nombre Persona
                </th>
                <th>
                    <i class="fa fa-calendar-check"></i>
                    Edad
                </th>
                <th>
                    <i class="fa fa-file-alt"></i>
                    Descripcion
                </th>
            </tr>

        </thead>

    </table>
    @Html.ActionLink("Registrar", "Guardar", new { }, new { @class = "btn btn-success" })
</div>
@section scripts{

    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {

            var tabla = $('#Tabla').DataTable({
                "ajax": {
                    "url": '/Home/GetAll',
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "idPersona", "name": "idPersona", "autoWidth": true },
                    { "data": "nombrePersona", "name": "nombrePersona", "autoWidth": true },
                    { "data": "edadPersona", "name": "edadPersona", "autoWidth": true },
                    { "data": "descripcionPersona", "name": "descripcionPersona", "autoWidth": true }
                ]

            });
        });


    </script>

}