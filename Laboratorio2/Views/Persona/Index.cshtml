
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html
<script src="https://kit.fontawesome.com/8da59f9c4f.js" crossorigin="anonymous"></script>
@Html
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<h1>
    Index
    <i class="fa fa-list-ul"></i>
</h1>

class="animate__animated animate__fadeInDown

<table id="Tabla" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Id Persona
            </th>
            <th>
                Nombre Persona
            </th>
            <th>
                Edad
            </th>
            <th>
                Descripcion
            </th>
        </tr>

    </thead>

</table>

@section scripts{

    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {

            var tabla = $('#Tabla').DataTable({
                "ajax": {
                    "url": '/Persona/Index',
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "IdPersona", "name": "IdPersona", "autoWidth": true },
                    { "data": "NombrePersona", "name": "NombrePersona", "autoWidth": true },
                    { "data": "EdadPersona", "name": "EdadPersona", "autoWidth": true },
                    { "data": "DescripcionPersona", "name": "DescripcionPersona", "autoWidth": true }
                ]

            });
        });


    </script>

}